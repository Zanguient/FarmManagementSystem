@model WherePigsFlyFms.ViewModels.FarmViewModel

@Styles.Render("~/Content/css")
@Styles.Render("~/Content/toastr")
@Styles.Render("~/bundles/modernizr")


<div class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("BREED MAINTENANCE", "Breeds", "Breeds", new { area = "" }, new { @class = "navbar-brand" })
            <a href="myModal" class="navbar-brand" data-toggle="modal" data-target="#myModal">REGISTER ANIMAL</a>
            <div class="search-container">
                <form action="/action_page.php"></form>
            </div>
            @*<button type="button" class="navbar-brand" data-toggle="modal" data-target="#myModal">REGISTER ANIMAL</button>*@
        </div>
    </div>
</div>


<div class="panel panel-primary">
    <div class="panel-heading small">
        <h3 style="text-align:center;">ANIMALS</h3>
    </div>
    <div class="panel panel-body">

        <table class="table table-striped table-bordered table-condensed table-hover table-responsive">
            <tr>
                <th>@Html.DisplayNameFor(Model => Model.Animals[0].TagNumber)</th>
                <th>@Html.DisplayNameFor(Model => Model.Animals[0].Name)</th>
                <th>@Html.DisplayNameFor(Model => Model.Animals[0].Breed)</th>
                <th>@Html.DisplayNameFor(Model => Model.Animals[0].Gender)</th>
                <th>@Html.DisplayNameFor(Model => Model.Animals[0].DateAcquired)</th>
                <th>@Html.DisplayNameFor(Model => Model.Animals[0].AnimalType)</th>
                <th>MAINTENANCE</th>
            </tr>
            @foreach (var item in Model.Animals)
            {
                <tr>
                    @*<td>@Html.ActionLink(item.TagNumber, "Details", "Animal", new { Id = item.Id })</td>*@
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.BreedText)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateAcquired)</td>
                    <td>@Html.DisplayFor(modelItem => item.AnimalType)</td>


                    <td style="text-align:center;">
                        @*<a href="@Url.Action("UpdateAnimal", "Animal", new { id = item.Id })" class="btn btn-warning"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></a>
                        <a href="@Url.Action("Delete", "Animal", new { id = item.Id })" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>*@
                    </td>
                </tr>
            }
        </table>
        <br />
        <div>

        </div>
    </div>



    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">REGISTER NEW ANIMAL</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial("_RegisterAnimal")
                </div>
            </div>
        </div>
    </div>
</div>

<div id="deleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                @*<h4 class="modal-title">DELETE ANIMAL @Html.DisplayFor(Model => Model.Animal.Name)</h4>*@
            </div>
            <div class="modal-body">
               @* @Html.Partial("_Delete", Model)*@
            </div>
        </div>
    </div>
</div>



