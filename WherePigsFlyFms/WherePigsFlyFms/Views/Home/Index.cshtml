@model WherePigsFlyFms.ViewModels.FarmViewModel

@Styles.Render("~/Content/css")
@Styles.Render("~/Content/toastr")
@Styles.Render("~/bundles/modernizr")


<br /><br />

<div class="panel panel-default">
        <div class="panel-heading small">
            <h4 style="text-align:center;">Animals</h4>
          
            <div class="panel panel-body">
                <br />
                <a href="myModal" data-toggle="modal" data-target="#myModal">REGISTER ANIMAL</a>
                <br />
                <table class="table table-striped table-condensed table-hover table-responsive">
                    <tr>
                        <th style="text-align:center;">Medical Records</th>
                        <th>Tag #</th>
                        <th>@Html.DisplayNameFor(Model => Model.Animals[0].Name)</th>
                        <th>@Html.DisplayNameFor(Model => Model.Animals[0].Breed)</th>
                        <th>@Html.DisplayNameFor(Model => Model.Animals[0].Gender)</th>
                        <th>@Html.DisplayNameFor(Model => Model.Animals[0].DateAcquired)</th>
                        <th>@Html.DisplayNameFor(Model => Model.Animals[0].AnimalType)</th>
                        <th>MAINTENANCE</th>
                    </tr>
                    @foreach (var item in Model.Animals)
                    {
                        <tr>
                            <td style="text-align:center;"> <span class="badge">@Html.DisplayFor(modelItem => item.MedicalCount)</span></td>
                            <td><strong>@Html.ActionLink(item.TagNumber, "ViewAnimalDetails", new { Id = item.Id })</strong> </td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Breed)</td>
                            <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateAcquired)</td>
                            <td>@Html.DisplayFor(modelItem => item.AnimalType)</td>


                            <td style="text-align:center;">
                                <a href="@Url.Action("UpdateAnimal", "Animal", new { id = item.Id })" class="btn btn-warning btn-sm">Modify</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>




    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">REGISTER NEW ANIMAL</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial("_RegisterAnimal", Model)
                </div>
            </div>
        </div>
    </div>




