@model WherePigsFlyFms.ViewModels.FarmViewModel

<br />

<div class="panel panel-primary">
    <div class="panel-heading"><h3 style="text-align:center;">Medical History</h3></div>
    <div class="panel-body">
        @Html.ActionLink("Add New Medical Record", "", string.Empty, new { @class = "btn btn-primary" })
        <br />
        <br />
        <table class="table table-striped table-condensed table-hover table-bordered">
            <tr>
                <th>Vaccine Date</th>
                <th>Type</th>
                <th>Notes</th>
            </tr>
            @foreach (var item in Model.Vaccines)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.VaccineDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.VaccineType)</td>
                    <td>@Html.DisplayFor(modelItem => item.VaccineNotes)</td>
                </tr>
            }
        </table>
    </div>
</div>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">REGISTER NEW ANIMAL</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("_RegisterAnimal", Model)
            </div>
        </div>
    </div>
</div>
