@model WherePigsFlyFms.ViewModels.FarmViewModel
@Styles.Render("~/Content/css")
@Styles.Render("~/Content/toastr")
@Styles.Render("~/bundles/modernizr")
<br />
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h2 style="text-align:center;">Code Management</h2>
    </div>
    <div class="panel-body">
        <a href="myModal" class="btn btn-primary" data-toggle="modal" data-target="#myModal">ADD CODE</a>

        <table class="table table-striped table-bordered">
            <tr>
                <th>VALUE</th>
                <th>LIST TYPE</th>
                <th>TEXT</th>
                <th>DELETED</th>
                <th>MAINTENANCE</th>
            </tr>
            @foreach (var item in Model.PickLists)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Value)</td>
                    <td>@Html.DisplayFor(modelItem => item.ListType)</td>
                    <td>@Html.DisplayFor(modelItem => item.Text)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsDeleted)</td>
                    <td></td>
                </tr>
            }
        </table>
    </div>
</div>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">ADD CODE</h4>
            </div>
            <div class="modal-body">
                @*@Html.Partial("_RegisterAnimal", Model)*@
            </div>
        </div>
    </div>
</div>